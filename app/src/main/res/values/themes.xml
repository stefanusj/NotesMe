<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NotesMe" parent="Base.Theme.NotesMe" />

    <style name="Theme.NotesMe.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Base.Theme.NotesMe" parent="Base.Theme.MaterialThemeBuilder">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/light_primary</item>
        <item name="colorSecondary">@color/light_primary</item>
        <item name="colorSecondaryVariant">@color/light_primary</item>

        <item name="android:colorBackground">@color/white_900</item>
        <item name="colorSurface">@color/light_primary</item>
        <item name="colorError">@color/light_red</item>

        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/white_900</item>

        <item name="android:statusBarColor" tools:ignore="NewApi">@color/light_primary</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/light_primary</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.NotesMe.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.NotesMe.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.NotesMe.LargeComponent
        </item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.NotesMe.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.NotesMe.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.NotesMe.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.NotesMe.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.NotesMe.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.NotesMe.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.NotesMe.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.NotesMe.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.NotesMe.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.NotesMe.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.NotesMe.Button</item>
        <item name="colorSheetTitleFont">@font/nunito_bold</item>

        <item name="materialButtonStyle">@style/Widget.NotesMe.Button</item>
    </style>
</resources>
